{
  "name": "save-the-grid-bot-player",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Standalone Playwright bot runner for Save the Grid UI smoke testing.",
  "scripts": {
    "bot": "node ./run-bot.mjs",
    "bot:smoke": "node ./run-bot.mjs --url http://localhost:5173 --scenario ./scenarios/smoke-menu-to-run.json",
    "bot:controls": "node ./run-bot.mjs --url http://localhost:5173 --scenario ./scenarios/smoke-controls.json"
  },
  "dependencies": {
    "playwright": "^1.50.0"
  }
}
